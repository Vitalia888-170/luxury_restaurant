<div class="row">
    <div class="col s10 offset-s1 m6 offset-m3">
        {{#if orders.length}}
        <h4 class="center-align">Orders List</h4>
        {{#each orders}}
        <div class="order-list">
            <div class="card blue-grey darken-1">
                {{#if isAccept}}
                <div class="accepted">
                    <i class="large material-icons">check_circle</i>
                </div>
                {{/if}}
                <div class="card-content white-text">
                    <span class="card-title">Order {{index}}</span>
                    <p><strong>Order: </strong>{{user.name}}({{user.email}})</p>
                    <p><strong>Date: </strong><span class="date-format">{{date}}</span></p>
                    <p><strong>Dishes: </strong></p>
                    <ol>
                        {{#each dishes}}
                        <li>{{dish.title}} (x <strong>{{count}}</strong>)</li>
                        {{/each}}
                    </ol>
                    <p><strong>Price: </strong> {{price}} $</p>
                </div>
                {{#if isAccept}}
                <div></div>
                {{else}}
                <div class="card-action">
                    <form action="/admin/orders/accepted" method="POST">
                        <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                        <input type="hidden" name="orderId" value="{{_id}}">
                        <button type="submit">Accept</button>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{else}}
        <p>No orders</p>
        {{/if}}
    </div>
</div>