<div class="auth-container">
  <div class="card-panel #ff9800 orange auth-bg"></div>
  <div class="auth-content">
    <img src="/images/food1.png" alt="food foto" />
    <div class="auth-tabs">
      <ul class="tabs auth-nav">
        <li class="tab col s6 tablink"><a href="#login" class="active">Sign in</a></li>
        <li class="tab col s6 tablink"><a href="#register">Sign up</a></li>
      </ul>
      <div id="register" class="login-tab">
        {{#if registerError}}
        <p class="alert">{{registerError}}</p>
        {{/if}}
        <form action="/auth/register" method="POST">
          <input type="user_text" name="name" placeholder="Name" />
          <input type="user_email" name="email" placeholder="Email" />
          <input type="user_password" name="password" placeholder="Password" />
          <input type="confirm_password" name="confirm" placeholder="Confirm password" />
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button type="submit">Sign up</button>
        </form>
      </div>
      <div id="login" class="login-tab">
         {{#if loginError}}
        <p class="alert">{{loginError}}</p>
        {{/if}}
        <form action="/auth/login" method="POST">
          <input type="user_email" name="email" placeholder="Email" />
          <input type="user_password" name="password" placeholder="Password" />
          <div class="reset-block">
            <a href="/auth/reset">Forgot password?</a>
          </div>
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button type="submit">Sign in</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>